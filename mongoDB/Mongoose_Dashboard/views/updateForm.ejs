<h1>Update (# <%= id %>) Animal  !!</h1>

<form action="/mongooses/<%= id %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Name:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="Enter your name" name="name">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Count:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="The approximate number of this animal" name="count">
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">A brief description:</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="desc"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Update!</button>
</form>
<form action="/" method="GET">
  <button type="submit" class="btn btn-primary">GO Back</button>
</form>